{
  "name": "interchat",
  "version": "3.14.0",
  "description": "A growing Discord bot which provides inter-server chat!",
  "main": "build/index.js",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "test": "node --experimental-vm-modules ./node_modules/.bin/jest",
    "start": "node .",
    "build": "tsc --build && npm run sentry:sourcemaps",
    "build:dev": "tsc --build",
    "dev": "tsc-watch --outDir ./build --onSuccess \"node --trace-warnings .\"",
    "register:commands": "node build/utils/RegisterCommands.js",
    "release": "standard-version",
    "lint": "eslint --cache --fix .",
    "prepare": "husky install",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org interchat --project interchat-production ./build && sentry-cli sourcemaps upload --org interchat --project interchat-production ./build"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "dependencies": {
    "@prisma/client": "^5.4.2",
    "@sentry/node": "^7.74.0",
    "@translate-tools/core": "^1.0.0",
    "common-tags": "^1.8.2",
    "discord-arts": "^0.5.8",
    "discord-hybrid-sharding": "^2.1.3",
    "discord.js": "^14.13.0",
    "dotenv": "^16.3.1",
    "lodash": "^4.17.21",
    "parse-duration": "^1.1.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@sentry/cli": "^2.21.2",
    "@types/common-tags": "^1.8.2",
    "@types/jest": "^29.5.6",
    "@types/lodash": "^4.14.199",
    "@types/node": "^20.8.6",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.51.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.1",
    "prettier": "^3.0.3",
    "prisma": "^5.4.2",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.1.1",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.2.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  }
}
