{
  // "include": ["./typings/**/*.d.ts"], // "./typings/**/*.d.ts"
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowJs": false,
    "rootDir": "src",
    "outDir": "build",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "inlineSources": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    // Set `sourceRoot` to  "/" to strip the build path prefix
    // from generated source code references.
    // This improves issue grouping in Sentry.
    "sourceRoot": "/"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json",
    // "typings/**/*"  
  ]
}
